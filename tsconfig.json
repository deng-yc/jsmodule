{
    "extends": "./tsconfig.build.json",

    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@jsmodules/*": ["packages/*/src"],
            "@shared/*": ["shared/*/src"]
        },
        "lib": ["DOM", "ESNext"],
        "jsx": "react",
        "esModuleInterop": true,
        "skipLibCheck": true
    }
}
